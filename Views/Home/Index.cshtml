@{
    ViewData["Title"] = "Evaluador Inteligente";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Home/style.css" />
}

<div class="home-container">
    <div class="hero-section">
        <div class="hero-content">
            <h1 class="hero-title">
                <i class="bi bi-robot"></i> Evaluador Inteligente
            </h1>
            <p class="hero-subtitle">
                Plataforma desarrollada con ML.NET para analizar opiniones de usuarios y sugerir productos personalizados
            </p>
            
            <div class="cta-buttons">
                <a asp-controller="Sentiment" asp-action="Index" class="btn btn-primary btn-lg cta-button">
                    <i class="bi bi-search"></i> Analizar Opinión
                </a>
                <a asp-controller="Recommendation" asp-action="Index" class="btn btn-success btn-lg cta-button">
                    <i class="bi bi-stars"></i> Recomendador
                </a>
            </div>
        </div>
    </div>

    <div class="features-section">
        <div class="feature-card">
            <div class="feature-icon">
                <i class="bi bi-emoji-heart-eyes"></i>
            </div>
            <h3>Análisis de Opiniones</h3>
            <p>Clasificación automática de sentimientos (positivo/negativo) con porcentaje de confianza</p>
        </div>
        
        <div class="feature-card">
            <div class="feature-icon">
                <i class="bi bi-graph-up"></i>
            </div>
            <h3>Recomendaciones Personalizadas</h3>
            <p>Sistema de recomendación basado en factorización de matrices con ML.NET</p>
        </div>
        
        <div class="feature-card">
            <div class="feature-icon">
                <i class="bi bi-lightning-charge"></i>
            </div>
            <h3>Tecnologías</h3>
            <p>ASP.NET Core MVC • ML.NET • PostgreSQL • Bootstrap 5</p>
        </div>
    </div>

    <div class="demo-section">
        <h2><i class="bi bi-rocket-takeoff"></i> ¿Cómo empezar?</h2>
        <div class="demo-steps">
            <div class="demo-step">
                <span class="step-number">1</span>
                <p>Prueba el <strong>analizador de opiniones</strong> escribiendo cualquier comentario sobre un producto</p>
            </div>
            <div class="demo-step">
                <span class="step-number">2</span>
                <p>Usa el <strong>recomendador</strong> con estos IDs de ejemplo: <code>U1</code>, <code>U2</code>, <code>U3</code></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Home/script.js"></script>
}