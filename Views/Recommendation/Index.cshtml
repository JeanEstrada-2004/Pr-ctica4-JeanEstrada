@{
    ViewData["Title"] = "Recomendación de Productos";
}

<h2>Recomendación de Productos</h2>

<form method="post">
    <div class="form-group">
        <label for="userId">Ingrese el ID del usuario:</label>
        <input type="text" name="userId" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success mt-2">Recomendar</button>
</form>

@if (ViewBag.Recomendaciones != null)
{
    <div class="mt-4">
        <h4>Productos recomendados para <strong>@ViewBag.Usuario</strong>:</h4>
        <ul class="list-group">
            @foreach (var rec in ViewBag.Recomendaciones)
            {
                <li class="list-group-item">
                    Producto: <strong>@rec.ProductId</strong> | Score: @String.Format("{0:N3}", rec.Score)
                </li>
            }
        </ul>
    </div>
}
